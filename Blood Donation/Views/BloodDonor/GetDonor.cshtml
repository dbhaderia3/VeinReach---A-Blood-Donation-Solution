@model List<Blood_Donation.Models.RegisterDonor>
@{
    ViewData["Title"] = "Get Donor Page";
}
@{
    Layout = "_Layout";
}

<!-- Page Header -->
<h2 class="text-center my-4">Donor List</h2>
<form method="get" asp-action="GetDonor" asp-controller="BloodDonor" class="mb-4">
<!-- Search Form in <li> -->
<ul class="list-unstyled">
    <li class="d-flex align-items-center mb-4">
        <!-- Search by Blood Group Input -->
        <div style="margin-right: 2px;">
            <input type="text" name="searchTerm" placeholder="Search by Blood Group" class="form-control" />
        </div>

        <!-- Search by City Input -->
        <div style="margin-right: 2px;">
            <input type="text" name="citySearchTerm" placeholder="Search by City" class="form-control" />
        </div>

        <!-- Single Search Button -->
        <button type="submit" class="btn btn-primary btn-sm">Search</button>
    </li>
</ul>
</form>
<!-- Donor List Table -->
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Blood Group</th>
                <th>Any Disease</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model)
            {
                <tr>
                    <td>@donor.RegId</td>
                    <td>@donor.FirstName @donor.LastName</td>
                    <td>@donor.Age</td>
                    <td>@donor.Email</td>
                    <td>@donor.BloodGroup</td>
                    <td>@donor.AnyDisease</td>
                    <td>@donor.City</td>
                </tr>
            }
        </tbody>
    </table>
</div>
